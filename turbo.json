{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "env": [
        "RECAPTCHA_SITE_KEY",
        "RECAPTCHA_SECRET_KEY",
        "DATABASE_URL",
        "APP_ID",
        "APP_SECRET",
        "NEXT_PUBLIC_BASE_URL",
        "COOKIE_SECRET",
        "NEXT_PUBLIC_JWKS_ENDPOINT",
        "NEXT_PUBLIC_RESOURCE_AUDIENCE",
        "NEXT_PUBLIC_ID_ISSUER",
        "ENDPOINT",
        "BASE_URL",
        "SENTRY_RELEASE",
        "MAPI_TOKEN_ENDPOINT",
        "MAPI_APP_ID",
        "MAPI_APP_SECRET",
        "MAPI_RESOURCE_URI"
      ],
      "outputs": ["dist/**", ".next/**", "out/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "types": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:push:fdl": {
      "cache": false
    },
    "tests:int": {
      "cache": false,
      "env": ["WALDO_URI"]
    }
  },
  "globalEnv": ["NODE_ENV"]
}

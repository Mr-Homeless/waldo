{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/api/auth/[...nextauth].ts",
    "pages/account.jsx"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@site": [
        "contexts/SiteContext.tsx"
      ],
      "@server/*": [
        "server/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@ui/*": [
        "../../packages/ui/index.tsx"
      ],
      "@auth/*": [
        "server/logto/client.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}

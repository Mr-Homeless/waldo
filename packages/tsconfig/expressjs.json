{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Express.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2021",
    "allowJs": true,
    "noEmit": false,
    "incremental": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "baseUrl": "."
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}